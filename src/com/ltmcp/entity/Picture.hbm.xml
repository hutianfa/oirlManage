<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.ltmcp.entity.Picture" table="picture">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="picPath" type="java.lang.String">
            <column name="pic_path" />
        </property>
        <property name="wayNum" type="java.lang.String">
            <column name="way_num" />
        </property>
        <property name="comid" type="java.lang.Integer">
            <column name="com_id" not-null="true">
            </column>
        </property>
    </class>
</hibernate-mapping>
